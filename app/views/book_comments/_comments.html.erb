<% book.book_comments.each do |book_comment| %>
    <tr>
     <td>
        <%= link_to user_path(book_comment.user) do %>
          <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 40, 40, fallback: "no-image-icon.jpg", size: '40x40') %> <br>
          <%= book_comment.user.name %>
        <% end %>
      </td>
      <td>
       <%= book_comment.comment %>
      </td>
        <% if book_comment.user == current_user %>
      <td>
        <%= link_to 'Destroy', book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, remote: true, class: "btn btn-sm btn-danger destroy_book_comment_#{book_comment.id}" %>
      </td>
        <% end %>
    </tr>
<% end %>